alias push-dotfiles='cd ~/Projects/dotfiles; git commit -am "Updated dotfiles"; git push; cd -'
alias pull-all-projects='find ~/Projects -type d -name .git | xargs -n 1 dirname | sort | while read line; do echo $line && cd $line && git pull; done'
